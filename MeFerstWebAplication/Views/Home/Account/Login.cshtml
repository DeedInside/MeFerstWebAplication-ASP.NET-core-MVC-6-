@model MeFerstWebAplication.Models.UserModel.LoginModel

<head>
    <link href="@Url.Content("~/Content/Style_Login.css")" rel="stylesheet" type="text/css" />
</head>
<div class="Right_stat">
    <div class="box_Login_out">
        <h2>Вход на сайт</h2>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="loginANDpassword">
                    <label class="Label_q" asp-for="Login">Введите Login</label>
                    <input type="text" asp-for="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div>
                    <label asp-for="Password">Введите Password</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <input class="Button_portfolio" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>